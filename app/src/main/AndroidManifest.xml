<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mkpatir.engelsizyasam">

    <application
        android:allowBackup="true"
        android:icon="@drawable/engelsiz_yasam_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/engelsiz_yasam_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitys.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".activitys.MainActivity" />
        <activity
            android:name=".activitys.AddIllnessActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activitys.PatientsActivity" />
        <activity
            android:name=".activitys.IllActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activitys.EditIllActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activitys.ReportsDayActivity" />
        <activity android:name=".activitys.LastEventsActivity"></activity>
    </application>

</manifest>