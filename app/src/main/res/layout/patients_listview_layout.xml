<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        android:layout_margin="2.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="2.5dp">
            <TextView
                android:id="@+id/patients_listview_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ill Name"
                android:layout_margin="5dp"
                android:textColor="@color/AppColor1"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/patients_listview_tckimlik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tc Kimlik"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/patients_listview_illness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hastalığı : ...."
                android:textSize="15sp"
                android:textColor="@color/RedA700"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="Son yapılan işlem : "
                    android:gravity="center_vertical"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/patients_listview_enter_or_exit"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:text="Giriş"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/enter_green_background"
                    android:gravity="center_vertical|center_horizontal"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>