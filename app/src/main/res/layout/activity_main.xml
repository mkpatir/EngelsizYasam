<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".activitys.MainActivity"
    android:rowCount="2"
    android:columnCount="2"
    android:layout_gravity="center_horizontal|center_vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/main_addillness_cardview"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_width="145dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/illness_register_icon"
                android:layout_margin="7.5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:text="Hasta Ekle"
                android:textColor="@color/AppColor1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/main_patients_cardview"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_width="145dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/illness_icon"
                android:layout_margin="7.5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:text="Hastalar"
                android:textColor="@color/AppColor1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/main_reports_day_cardview"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_width="145dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/report_icon"
                android:layout_margin="7.5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kalan Rapor Süreleri"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textColor="@color/AppColor1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/main_last_events_cardview"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:layout_width="145dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_margin="7.5dp"
                android:src="@drawable/last_event_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Son Gerçekleşen Olaylar"
                android:textColor="@color/AppColor1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</GridLayout>