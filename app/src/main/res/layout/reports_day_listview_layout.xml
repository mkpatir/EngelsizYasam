<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/reports_day_listview_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2.5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/GreenA700">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/id_card_icon"/>
                <TextView
                    android:id="@+id/reports_day_listview_tckimlik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tc kimlikno"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.5dp"
                    android:layout_weight=".5"/>
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/reports_day_listview_alert"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/alert_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/report_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapor ismi :"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.5dp"/>
                <TextView
                    android:id="@+id/reports_day_listview_report_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="report_name"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/calendar_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapor bitiÅŸ tarihi :"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.5dp"/>
                <TextView
                    android:id="@+id/reports_day_listview_report_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="report_end_date"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/clock_icon"/>
                <TextView
                    android:id="@+id/reports_day_listview_remaining_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="remaining_day"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>